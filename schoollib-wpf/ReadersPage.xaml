<Page x:Class="schoollib_wpf.ReadersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:schoollib_wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Читатели">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="createReaderButton" Content="Создать" Width="80" Margin="0,0,8,0" Click="createReaderButton_Click"/>
            <Button x:Name="deleteReaderButton" Content="Удалить" Width="80" Margin="0,0,8,0" Click="deleteReaderButton_Click"/>
            <TextBlock Text="Класс:" VerticalAlignment="Center" Margin="8,0,0,0"/>
            <ComboBox Width="60" SelectedIndex="0" Margin="4,0,0,0">
                <ComboBoxItem>Все</ComboBoxItem>
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>2</ComboBoxItem>
                <ComboBoxItem>3</ComboBoxItem>
                <ComboBoxItem>4</ComboBoxItem>
                <ComboBoxItem>5</ComboBoxItem>
                <ComboBoxItem>6</ComboBoxItem>
                <ComboBoxItem>7</ComboBoxItem>
                <ComboBoxItem>8</ComboBoxItem>
                <ComboBoxItem>9</ComboBoxItem>
                <ComboBoxItem>10</ComboBoxItem>
                <ComboBoxItem>11</ComboBoxItem>
            </ComboBox>
            <TextBlock Text="Параллель:" VerticalAlignment="Center" Margin="8,0,0,0"/>
            <ComboBox Width="60" SelectedIndex="0" Margin="4,0,0,0">
                <ComboBoxItem>Все</ComboBoxItem>
                <ComboBoxItem>А</ComboBoxItem>
                <ComboBoxItem>Б</ComboBoxItem>
                <ComboBoxItem>В</ComboBoxItem>
                <ComboBoxItem>Г</ComboBoxItem>
                <ComboBoxItem>Д</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <ListView x:Name="readerListView" Margin="0,12,0,0" Grid.Row="1" MouseDoubleClick="readerListView_MouseDoubleClick">
            <ListView.Resources>
                <Style TargetType="{x:Type GridViewColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Id}" Width="60">Id</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Surname}" Width="180">Фамилия</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="120">Имя</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Patronymic}" Width="240">Отчество</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Step}" Width="80">Класс</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Parallel}" Width="80">Параллель</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
