<Window x:Class="schoollib_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:schoollib_wpf"
        mc:Ignorable="d"
        Title="Школьная библиотека" Height="760" Width="1024">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,12">Меню</TextBlock>

        <TextBlock Text="{Binding ElementName=mainFrame, Path=Content.Title}" FontSize="16" FontWeight="Bold" Margin="0,0,0,12" Grid.Column="1"/>

        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock>
                <Hyperlink NavigateUri="ReadersPage.xaml" Click="NavigateToPage">Читатели</Hyperlink>
            </TextBlock>
            <TextBlock>
                <Hyperlink NavigateUri="BooksPage.xaml" Click="NavigateToPage">Книги</Hyperlink>
            </TextBlock>
            <TextBlock>
                <Hyperlink NavigateUri="ClassesParallelsPage.xaml" Click="NavigateToPage">Классы и параллели</Hyperlink>
            </TextBlock>
        </StackPanel>

        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" Source="/ReadersPage.xaml" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
